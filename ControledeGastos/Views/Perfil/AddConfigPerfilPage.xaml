<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ControledeGastos.Views.AddConfigPerfilPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="Nome: "  />
                <Entry x:Name="EntNome" Placeholder="Digite Aqui..."/>
                <Label Text="Como gostaria de ser chamado? "  />
                <Entry x:Name="EntApelido" Placeholder="Digite Aqui..."/>

                <StackLayout x:Name="StacValor">
                </StackLayout>

                <StackLayout x:Name="StacCartao">
                </StackLayout>

                <Button Text="Adicionar Valor Mensal" Clicked="BtnAddEntryValor"/>
                <Button Text="Adicionar Cartão" Clicked="BtnAddEntryCartao"/>
                <Button Text="Salvar" Clicked="BtnAddSalvar"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>